page{
 
  height:100%;
  overflow-y: hidden;

}
.container{
  display: flex;
  justify-content: center;
  padding:0;
}
image{
  width:100%;
  height: 100%;
}
.formGroup{
  position: absolute;
  bottom:100rpx;
}
input{
  width:400rpx;
  background-color: #fff;
  border-radius: 5px;
  font-size:14px;
  margin-bottom:5px;
  padding:5px 10px;
}
.btnGroup{
  display: flex;
  width:100%;
  justify-content:space-between;
}
button{
  display: inline-block;
  height:36px;
  line-height:36px;
  width:45%;
  color: #fff;
  font-size:14px;
  background-color: rgb(95, 126, 230);
}